---
apiVersion: v1
kind: Secret
metadata:
  name: forwarder
  namespace: default
data:
  pipes.yaml: {{ file2string "pipes.yaml" | base64Encode }}

---
# for versions before 1.8.0 use apps/v1beta1
apiVersion: apps/v1beta2
kind: DaemonSet
metadata:
  name: forwarder
  # namespace: kube-system
  namespace: default
  labels:
    app: forwarder
spec:
  selector:
    matchLabels:
      name: forwarder
  template:
    metadata:
      labels:
        name: forwarder
    spec:
      containers:
      - name: forwarder
        image: davidwalter/forwarder:latest
        # imagePullPolicy: IfNotPresent
        imagePullPolicy: Always
        securityContext:
          privileged: true
        args:
        - "/forwarder"
        ## resources:
        ##   limits:
        ##     memory: 200Mi
        ##   requests:
        ##     cpu: 100m
        ##     memory: 200Mi
        volumeMounts:
        - name: config
          mountPath: /var/lib/forwarder
          readOnly: false
      volumes:
      - name: config
        secret:
          secretName: forwarder
          defaultMode: 420
      terminationGracePeriodSeconds: 30
      hostNetwork: true
      dnsPolicy: ClusterFirstWithHostNet
      serviceAccount: forwarder

# ------------------------- Service ------------------------- #
---
apiVersion: v1
kind: Service
metadata:
  name: echo2
  labels:
    app: echo2
spec:
  ports:
  - port: 8888
    name: echo2
  selector:
    app: echo2

---
# for versions before 1.8.0 use apps/v1beta1
# apiVersion: apps/v1beta2 # for versions before 1.8.0 use apps/v1beta1
kind: Deployment
apiVersion: apps/v1beta1
# kind: StatefulSet
# apiVersion: apps/v1beta2
# kind: DaemonSet
metadata:
  name: echo2
  # namespace: default
  # labels:
  #   app: echo2
spec:
  replicas: 2
  # serviceName: echo2 # not for deployment
  selector: 
    matchLabels:
      app: echo2
  template:
    metadata:
      labels:          # required selector
        app: echo2
    spec:
      # serviceAccount: echo2
      containers:
      - name: echo2
        # securityContext:
        #   privileged: true
        image: davidwalter/forwarder:latest
        imagePullPolicy: Always
        args:
        - "/echo"
        ports:
        - name: echo2
          containerPort: 8888
      terminationGracePeriodSeconds: 30
      # dnsPolicy: ClusterFirstWithHostNet

---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: forwarder
rules:
- apiGroups: [""]
  resources:
  - nodes
  - nodes/proxy
  - services
  - endpoints
  - pods
  verbs: ["get", "list", "watch"]
- nonResourceURLs: ["/metrics"]
  verbs: ["get"]

---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: forwarder
  namespace: default
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: forwarder
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: forwarder
subjects:
- kind: ServiceAccount
  name: forwarder
  namespace: default

---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: echo2
rules:
- apiGroups: [""]
  resources:
  - nodes
  - nodes/proxy
  - services
  - endpoints
  - pods
  verbs: ["get", "list", "watch", "update", "patch"]
- nonResourceURLs: ["/metrics"]
  verbs: ["get"]

---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: echo2
  namespace: default
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: echo2
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: echo2
subjects:
- kind: ServiceAccount
  name: echo2
  namespace: default

